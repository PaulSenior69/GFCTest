@model GDSHelpers.Models.FormSchema.PageVM

@if (Model.Questions.Any(x => x.Validation != null && x.Validation.IsErrored))
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            There's a problem
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var item in Model.Questions?.Where(x => x.Validation.IsErrored))
                {
                    var href = item.InputType == "optionlist" || item.InputType == "checkboxlist" ? item.QuestionId + "-0" : item.QuestionId;

                    <li>
                        <a href="#@(href)" tabindex="1">@Html.Raw(item.Validation.ErrorMessage)</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}